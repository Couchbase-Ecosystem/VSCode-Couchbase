{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@components/*": ["components/*"],
      },
      "target": "es6",
      "outDir": "dist",
      "lib": [
        "es6",
        "DOM",
        "DOM.Iterable",
        "es2019" // Add "es2017" to the "lib" option
      ],
      "typeRoots": [
        "./types"
      ],
      "jsx": "react-jsx",
      "sourceMap": true,
      "rootDir": "..",
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules"
    ]
  }
  