{
  "name": "vscode-couchbase",
  "displayName": "vscode-couchbase",
  "description": "",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.63.1"
  },
  "categories": [
    "Other"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "Couchbase, Inc.",
  "homepage": "https://github.com/couchbaselabs/VSCode-Couchbase",
  "bugs": {
    "url": "https://github.com/couchbaselabs/VSCode-Couchbase/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/couchbaselabs/VSCode-Couchbase.git"
  },
  "preview": true,
  "icon": "images/couchbase.png",
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "vscode-couchbase.couchbaseDocument",
        "displayName": "Couchbase Document",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "couchbase-activity-bar",
          "title": "Couchbase",
          "icon": "images/couchbase.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-couchbase.createClusterConnection",
        "title": "Create connection to Couchbase cluster",
        "category": "Couchbase",
        "icon": "images/create.svg"
      },
      {
        "command": "vscode-couchbase.refreshConnection",
        "title": "Refresh Cluster Connection",
        "category": "Couchbase"
      },
      {
        "command": "vscode-couchbase.deleteClusterConnection",
        "title": "Delete Cluster Connection",
        "category": "Couchbase"
      },
      {
        "command": "vscode-couchbase.useClusterConnection",
        "title": "Connect to Cluster",
        "category": "Couchbase"
      },
      {
        "command": "vscode-couchbase.createDocument",
        "title": "Create Document",
        "category": "Couchbase"
      },
      {
        "command": "vscode-couchbase.removeDocument",
        "title": "Remove Document",
        "category": "Couchbase"
      },
      {
        "command": "vscode-couchbase.refreshCollection",
        "title": "Refresh Collection",
        "category": "Couchbase"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-couchbase.refreshConnection",
          "when": "false"
        },
        {
          "command": "vscode-couchbase.deleteClusterConnection",
          "when": "false"
        },
        {
          "command": "vscode-couchbase.useClusterConnection",
          "when": "false"
        }
      ],
      "editor/context": [],
      "view/item/context": [
        {
          "command": "vscode-couchbase.refreshConnection",
          "when": "(view == couchbase || view == document-editor) && viewItem"
        },
        {
          "command": "vscode-couchbase.deleteClusterConnection",
          "when": "view == couchbase && viewItem == connection"
        },
        {
          "command": "vscode-couchbase.useClusterConnection",
          "when": "view == couchbase && viewItem == connection"
        },
        {
          "command": "vscode-couchbase.createDocument",
          "when": "view == couchbase && viewItem == collection"
        },
        {
          "command": "vscode-couchbase.removeDocument",
          "when": "view == couchbase && viewItem == document"
        },
        {
          "command": "vscode-couchbase.refreshCollection",
          "when": "view == couchbase && viewItem == collection"
        }
      ],
      "view/title": [
        {
          "command": "vscode-couchbase.refreshConnection",
          "when": "view == couchbase"
        },
        {
          "command": "vscode-couchbase.createClusterConnection",
          "when": "view == couchbase",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "couchbase-activity-bar": [
        {
          "id": "couchbase",
          "name": "Couchbase"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Couchbase VSCode",
      "properties": {
        "test": {
          "test": "test"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run bundle",
    "build:extension": "webpack --mode development --config-name extension",
    "build:webviews": "webpack --mode development --config-name webviews",
    "bundle": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch",
    "clean": "npx rimraf .eslintcache* tsconfig*.tsbuildinfo",
    "rebuild": "yarn run reset && yarn run build",
    "reset": "yarn run clean && yarn --frozen-lockfile",
    "package": "vsce package --yarn",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "format": "prettier 'src/**/*.ts' --write",
    "rebuild:electron": "node scripts/rebuildElectron.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^12.20.42",
    "@types/vscode": "^1.63.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron-rebuild": "^3.2.7",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "mocha": "^8.4.0",
    "node-loader": "^2.0.0",
    "prettier": "^2.5.1",
    "ts-loader": "^8.3.0",
    "typescript": "^4.1.3",
    "vsce": "^2.6.3",
    "vscode-test": "^1.6.1",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "couchbase": "^3.2.4",
    "keytar": "^7.7.0"
  }
}
